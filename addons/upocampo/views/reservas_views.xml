<odoo>
  <record id="reservas_form_view" model="ir.ui.view">
    <field name="name">upocampo.reservas.form</field>
    <field name="model">upocampo.reservas</field>
    <field name="arch" type="xml">
      <form string="Classes">
        <sheet layout="auto">
          <group>
            <field name="name"/>
            <field name="descuento_id" widget="many2one"/><!-- TODO mostrar campo nombre de descuento -->
            <field name="precio"/>
            <field name="importeTotal"/>
            <field name="numHabitacion"/>
            <field name="checkIn"/>
            <field name="checkOut"/>
            <field name="habitaciones_ids" widget="many2many"/>
            <!-- TODO pillar el autoincremental automaticamente. Replicar en todos los modelos -->
            <field name="cliente_id" widget="many2one"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="reservas_tree_view" model="ir.ui.view">
    <field name="name">upocampo.reservas.tree</field>
    <field name="model">upocampo.reservas</field>
    <field name="arch" type="xml">
      <tree string="tree_string">
        <!-- TODO mostrar el autoincremental. Replicar en todos los modelos -->
        <field name="name"/>
        <field name="checkIn"/>
        <field name="checkOut"/>
        <!-- TODO nombre del cliente -->
        <field name="cliente_id" widget="many2one"/>
      </tree>
    </field>
  </record>

  <record id="reservas_calendar_view" model="ir.ui.view">
    <field name="name">upocampo.reservas.calendar</field>
    <field name="model">upocampo.reservas</field>
    <field name="arch" type="xml">
      <calendar string="Reservas" color="numHabitacion" date_start="checkIn" date_stop="checkOut" mode="month">
        <field name="name"/>
      </calendar>
    </field>
  </record>

  <record id="reservas_list_action" model="ir.actions.act_window">
    <field name="name">Reservas</field>
    <field name="res_model">upocampo.reservas</field>
    <field name="view_mode">tree,form,calendar</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create the firstclass</p>
    </field>
  </record>
</odoo>